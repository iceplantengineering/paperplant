{
  "name": "paperplant-monorepo",
  "version": "1.0.0",
  "description": "🏭 製紙工場DXダッシュボード - モノレポ構成",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "pip install -r requirements.txt",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python main.py",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm run preview",
    "start:backend": "cd backend && python main.py",
    "setup:database": "cd database && python simple_data_generator.py",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf dist node_modules",
    "clean:backend": "find . -type d -name '__pycache__' -exec rm -rf {} + && find . -name '*.pyc' -delete"
  },
  "keywords": [
    "papermill",
    "dashboard",
    "traceability",
    "manufacturing",
    "dx",
    "digital-transformation",
    "react",
    "fastapi",
    "typescript",
    "python"
  ],
  "author": "アイスプラントエンジニアリング株式会社",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iceplantengineering/paperplant.git"
  },
  "bugs": {
    "url": "https://github.com/iceplantengineering/paperplant/issues"
  },
  "homepage": "https://github.com/iceplantengineering/paperplant#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "python": ">=3.8.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}